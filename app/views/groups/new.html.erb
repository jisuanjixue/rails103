<div class="col-md-4 col-md-offset-4">
   <h1 class="text-center">新增群组</h1>
   <%= simple_form_for @group do |f| %>
   <% if @group.errors.any? %>
     <ul>
       <% @group.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
       <% end %>
     </ul>
      <% end %>
   <%= f.input :title, :label => "标题", :placeholder => "请输入名称" %>
   <%= f.input :description, :label => "描述", :placeholder => "请输入描述" %>
   <%= f.submit "提交", :disable_with => "Submitting...." %>
   <% end %>
</div>


 <%= simple_form_for @group do  |f| %>
     <% if @group.errors.any? %>
      <ul>
        <% @group.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
         <% end %>
      </ul>
    <% end %>
   <%= f.input :title, input_html: { class: "form-control"}, :label => "标题", :placeholder => "请输入名称" %>
   <%= f.input :description, input_html: { class: "form-control"},  :label => "描述", :placeholder => "请输入介绍" %>
   <%= f.submit "提交", :disable_with => 'Submitting....'%>
<% end %>

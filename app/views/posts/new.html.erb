<h2 class="text-center">新增文章</h2>

<div class="col-md-6 col-md-offset-6">
  <%= simple_form_for [@group,@post] do |f| %>
    <div class="form-group">
      <%= f.input :content, :label => "文章", :placeholder => "写入文章", input_html: { class: "form-control"} %>
    </div>
    <div class="form-actions">
      <%= f.submit "提交", disable_with: "Submiting...", class: "btn btn-primary" %>
    </div>
    <% end %>
</div>
